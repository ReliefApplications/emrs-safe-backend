{
  "name": "safe-backend",
  "version": "0.1.9",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_PATH=./build node build/src/index.js",
    "build": "tsc -p .",
    "dev": "nodemon src/index.ts",
    "lint": "eslint . --ext .ts",
    "init": "ts-node src/setup/init.ts",
    "test": "jest"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "src/**/*.graphql"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "execMap": {
      "ts": "node --inspect=0.0.0.0:9229 --nolazy -r ts-node/register"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/storage-blob": "^12.5.0",
    "@casl/ability": "^5.2.2",
    "@casl/mongoose": "^5.0.0",
    "amqplib": "^0.8.0",
    "apollo-server-express": "^2.19.0",
    "body-parser": "^1.19.0",
    "bson": "^4.2.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "dotenv": "^10.0.0",
    "events": "^3.3.0",
    "exceljs": "^4.2.1",
    "express": "^4.16.4",
    "express-fileupload": "^1.2.1",
    "file-type": "^16.5.0",
    "form-data": "^3.0.1",
    "graphql": "^14.1.1",
    "graphql-amqp-subscriptions": "^1.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-subscriptions": "^1.1.0",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "^11.0.0",
    "http": "0.0.1-security",
    "http-proxy": "^1.18.1",
    "inflection": "^1.12.0",
    "json2csv": "^5.0.6",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "mongoose": "^5.10.3",
    "multer": "^1.4.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.2.1",
    "sanitize-filename": "^1.6.3",
    "subscriptions-transport-ws": "^0.9.18"
  },
  "devDependencies": {
    "@types/amqplib": "^0.8.0",
    "@types/crypto-js": "^4.0.1",
    "@types/express": "^4.17.9",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/inflection": "^1.5.28",
    "@types/jest": "^26.0.23",
    "@types/mongoose": "^5.10.5",
    "@types/passport-azure-ad": "^4.3.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "connect-busboy": "^0.0.2",
    "eslint": "^7.25.0",
    "husky": "^4.3.8",
    "jest": "^27.0.4",
    "jira-prepare-commit-msg": "^1.4.3",
    "nodemon": "^2.0.6",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "jira-prepare-commit-msg",
      "pre-push": "npm run lint"
    }
  },
  "jira-prepare-commit-msg": {
    "messagePattern": "[$J]\n$M",
    "jiraTicketPattern": "([A-Z]+-\\d+)",
    "commentChar": "#",
    "isConventionalCommit": false,
    "allowEmptyCommitMessage": false
  }
}
